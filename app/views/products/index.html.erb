<h2> Available Products </h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Unit</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	<% @products.each do |product| %>
			<tr>
			<td><%= product.title%></td>
			<td><%= product.description%></td>
			<td><%= product.price%></td>
			<td><%= product.unit%></td>
			<td>Action</td>
		</tr>
		<% end %>
	</tbody>
</table>